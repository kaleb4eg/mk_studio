h3 = t('.title')

.row.add-bottom-space
  .col-xs-12
    = link_to(t('.commercial'), projects_path(project_type: 'commercial'), class: "project-type #{'active' if params['project_type'] == 'commercial'}")
    = link_to(t('.privat'), projects_path(project_type: 'private'), class: "project-type #{'active' if params['project_type'] == 'private'}")
    = link_to(t('.finished'), projects_path(project_type: 'finished'), class: "project-type #{'active' if params['project_type'] == 'finished'}")

.row.add-bottom-space
  == show_projects(@projects)

